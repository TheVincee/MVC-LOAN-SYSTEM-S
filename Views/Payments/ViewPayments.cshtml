@model List<URSAL_VINCENEIL.Entities.PaymentsTb>

<div class="container mt-4 p-4 border rounded shadow-sm bg-light">
    <h2 class="mb-4">Payments</h2>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Loan ID</th>
                <th>Client ID</th>
                <th>Collectable</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.LoanId</td>
                    <td>@payment.ClientId</td>
                    <td>@payment.Collectable</td>
                    <td>@payment.Date.ToString("yyyy-MM-dd")</td>
                    <td>@payment.Status</td>
                    <td>
                        @if (payment.Status == "Pending")
                        {
                            <a class="btn btn-primary btn-sm" asp-action="Pay" asp-route-id="@payment.Id">Pay</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-secondary mt-3" onclick="window.print()">Print</button>
</div>
